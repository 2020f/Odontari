@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-card">
    <div class="login-icon-wrap">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
        </svg>
    </div>
    <h1 class="login-title">Iniciar sesión</h1>

    <form id="account" method="post" class="login-form">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-group">
            <div class="input-wrap">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
                <input asp-for="Input.Email" type="email" autocomplete="username" aria-required="true" placeholder="Correo electrónico" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="input-wrap">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
                <input asp-for="Input.Password" type="password" autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="login-options">
            <label asp-for="Input.RememberMe" class="login-remember">
                <input asp-for="Input.RememberMe" />
                Recordarme
            </label>
            <a id="forgot-password" asp-page="./ForgotPassword" class="login-forgot">¿Olvidaste tu contraseña?</a>
        </div>

        <button id="login-submit" type="submit" class="login-submit">Entrar</button>

        <div class="login-links">
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como nuevo usuario</a>
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmación de correo</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
