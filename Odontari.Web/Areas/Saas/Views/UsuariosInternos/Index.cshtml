@model IEnumerable<UsuarioInternoListViewModel>
@{
    ViewData["Title"] = "Usuarios Internos SaaS";
}

<div class="saas-dashboard">
    <header class="dashboard-hero">
        <h1>Usuarios Internos</h1>
        <p class="dashboard-subtitle">SuperAdmin, Soporte y Auditor.</p>
    </header>
    @if (TempData["Message"] != null)
    {
        <div class="page-alerts"><div class="alert alert-success">@TempData["Message"]</div></div>
    }
    <div class="dashboard-actions" style="margin-top: 0; padding-top: 0; border-top: none;">
        <a asp-area="Saas" asp-controller="UsuariosInternos" asp-action="Create" class="btn-main btn-primary">Crear usuario interno</a>
    </div>
    <div class="section-card" style="margin-top: 1.25rem;">
        <table class="activity-table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Activo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.NombreCompleto</td>
                        <td>@u.Email</td>
                        <td>@(u.Rol ?? "-")</td>
                        <td>@(u.Activo ? "SÃ­" : "No")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (!Model.Any())
    {
        <p class="section-empty">No hay usuarios internos (SuperAdmin, Soporte, Auditor).</p>
    }
</div>
