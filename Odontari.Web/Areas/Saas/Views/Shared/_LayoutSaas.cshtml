@using Microsoft.AspNetCore.Identity
@using Odontari.Web.Models
@using Odontari.Web.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    var currentUser = User.Identity?.IsAuthenticated == true ? await UserManager.GetUserAsync(User) : null;
    var userRoles = currentUser != null ? await UserManager.GetRolesAsync(currentUser) : new List<string>();
    var userRole = userRoles.FirstOrDefault() ?? "SuperAdmin";
    var displayName = currentUser?.NombreCompleto ?? currentUser?.Email ?? User.Identity?.Name ?? "Super Admin";
    var initial = displayName.Length > 0 ? char.ToUpperInvariant(displayName[0]).ToString() : "S";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Odontari SaaS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/saas-layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/saas-dashboard.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="saas-layout">
    <aside class="saas-sidebar">
        <div class="sidebar-brand">
            <svg class="sidebar-brand-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
            <span class="sidebar-brand-text">Odontari SaaS</span>
        </div>
        <nav class="saas-sidebar-nav">
            <a asp-area="Saas" asp-controller="Dashboard" asp-action="Index" class="nav-link @(controller == "Dashboard" && action == "Index" ? "active" : "")" title="Dashboard">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="7" height="9"/><rect x="14" y="3" width="7" height="5"/><rect x="14" y="12" width="7" height="9"/><rect x="3" y="16" width="7" height="5"/></svg>
                <span class="nav-text">Dashboard</span>
            </a>
            <a asp-area="Saas" asp-controller="Clinicas" asp-action="Index" class="nav-link @(controller == "Clinicas" ? "active" : "")" title="Clínicas">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
                <span class="nav-text">Clínicas</span>
            </a>
            <a asp-area="Saas" asp-controller="UsuariosClinica" asp-action="Index" class="nav-link @(controller == "UsuariosClinica" ? "active" : "")" title="Usuarios de Clínica">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                <span class="nav-text">Usuarios de Clínica</span>
            </a>
            <a asp-area="Saas" asp-controller="Planes" asp-action="Index" class="nav-link @(controller == "Planes" ? "active" : "")" title="Planes">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="1" x2="12" y2="23"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>
                <span class="nav-text">Planes</span>
            </a>
            <a asp-area="Saas" asp-controller="Suscripciones" asp-action="Index" class="nav-link @(controller == "Suscripciones" ? "active" : "")" title="Suscripciones">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="18" rx="2"/><path d="M16 2v4M8 2v4M3 10h18"/></svg>
                <span class="nav-text">Suscripciones</span>
            </a>
            <a asp-area="Saas" asp-controller="UsuariosInternos" asp-action="Index" class="nav-link @(controller == "UsuariosInternos" ? "active" : "")" title="Usuarios Internos">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
                <span class="nav-text">Usuarios Internos</span>
            </a>
            <a asp-area="Saas" asp-controller="Logs" asp-action="Index" class="nav-link @(controller == "Logs" ? "active" : "")" title="Logs / Auditoría">
                <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>
                <span class="nav-text">Logs / Auditoría</span>
            </a>
        </nav>
        <div class="saas-sidebar-user">
            <div class="user-avatar" title="@displayName">@initial</div>
            <div class="user-info">
                <span class="user-name">@displayName</span>
                <span class="user-role">@userRole</span>
            </div>
            <div class="user-actions">
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Dashboard", new { area = "Saas" })" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-logout" title="Cerrar sesión">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
                        <span class="btn-logout-text">Cerrar sesión</span>
                    </button>
                </form>
            </div>
        </div>
    </aside>
    <div class="saas-main">
        <header class="saas-main-header">
            <h1>@(ViewData["Title"] ?? "Gestor SaaS")</h1>
        </header>
        <main class="saas-main-content">
            <div class="saas-content">
                @RenderBody()
            </div>
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
