@model IEnumerable<UsuarioClinicaListViewModel>
@{
    ViewData["Title"] = "Usuarios de Clínica";
    var clinicaId = ViewBag.ClinicaId as int? ?? 0;
    var clinicaNombre = ViewBag.ClinicaNombre as string ?? "";
}

<h1>Usuarios — @clinicaNombre</h1>
<p class="text-muted">Solo se puede crear <strong>Administrador de clínica</strong>. El resto del personal (Doctor, Recepción, Finanzas) se crea desde el panel de la clínica (Doctores y Personal).</p>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<p>
    <a asp-area="Saas" asp-controller="UsuariosClinica" asp-action="Create" asp-route-clinicaId="@clinicaId" class="btn btn-primary">Crear usuario</a>
    <a asp-area="Saas" asp-controller="UsuariosClinica" asp-action="Index" class="btn btn-outline-secondary">Cambiar clínica</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Activo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.NombreCompleto</td>
                <td>@u.Email</td>
                <td>@(u.Rol ?? "-")</td>
                <td>@(u.Activo ? "Sí" : "No")</td>
            </tr>
        }
    </tbody>
</table>
@if (!Model.Any())
{
    <p class="text-muted">No hay usuarios en esta clínica. Cree el primer usuario (por ejemplo AdminClinica).</p>
}
<p><a asp-area="Saas" asp-controller="Clinicas" asp-action="Index">Volver a Clínicas</a></p>
