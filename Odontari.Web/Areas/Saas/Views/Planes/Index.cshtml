@model IEnumerable<PlanViewModel>
@{
    ViewData["Title"] = "Planes";
}

<h1>Planes</h1>
<p><a asp-action="Create">Crear plan</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio/mes</th>
            <th>Max usuarios</th>
            <th>Max doctores</th>
            <th>Facturación</th>
            <th>Odontograma</th>
            <th>Activo</th><th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>@p.PrecioMensual.ToString("N2")</td>
                <td>@p.MaxUsuarios</td>
                <td>@p.MaxDoctores</td>
                <td>@(p.PermiteFacturacion ? "Sí" : "No")</td>
                <td>@(p.PermiteOdontograma ? "Sí" : "No")</td>
                <td>@(p.Activo ? "Sí" : "No")</td>
                <td><a asp-action="Edit" asp-route-id="@p.Id">Editar</a></td>
            </tr>
        }
    </tbody>
</table>
