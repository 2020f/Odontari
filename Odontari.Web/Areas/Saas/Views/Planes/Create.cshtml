@model PlanEditViewModel
@{
    ViewData["Title"] = "Crear plan";
}

<h1>Crear plan</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="PrecioMensual"></label>
        <input asp-for="PrecioMensual" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="PrecioMensual"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxUsuarios"></label>
        <input asp-for="MaxUsuarios" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MaxDoctores"></label>
        <input asp-for="MaxDoctores" class="form-control" />
    </div>
    <div class="form-check">
        <input asp-for="PermiteFacturacion" class="form-check-input" />
        <label asp-for="PermiteFacturacion" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="PermiteOdontograma" class="form-check-input" />
        <label asp-for="PermiteOdontograma" class="form-check-label"></label>
    </div>
    <div class="form-check">
        <input asp-for="Activo" class="form-check-input" />
        <label asp-for="Activo" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
