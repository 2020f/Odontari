@model IEnumerable<ClinicaViewModel>
@{
    ViewData["Title"] = "Clínicas";
}

<h1>Clínicas</h1>
<p><a asp-area="Saas" asp-controller="Clinicas" asp-action="Create" class="btn btn-primary">Crear clínica</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Plan</th>
            <th>Activa</th><th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Nombre</td>
                <td>@c.Email</td>
                <td>@c.Telefono</td>
                <td>@c.PlanNombre</td>
                <td>@(c.Activa ? "Sí" : "No")</td>
                <td>
                    <a asp-area="Saas" asp-action="Edit" asp-route-id="@c.Id">Editar</a>
                    | <a asp-area="Saas" asp-controller="UsuariosClinica" asp-action="Index" asp-route-clinicaId="@c.Id">Usuarios</a>
                </td>
            </tr>
        }
    </tbody>
</table>
