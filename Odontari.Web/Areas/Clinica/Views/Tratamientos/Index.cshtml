@model IEnumerable<TratamientoListViewModel>
@{
    ViewData["Title"] = "Tratamientos";
}

<div class="content-header">
    <h1>Catálogo de tratamientos</h1>
    <a asp-action="Create" class="btn-content-primary">+ Nuevo tratamiento</a>
</div>
<div class="content-card">
    <table class="table">
        <thead>
            <tr><th>Nombre</th><th>Precio</th><th>Duración (min)</th><th>Categoría</th><th>Activo</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Nombre</td>
                    <td>RD$ @t.PrecioBase.ToString("N2")</td>
                    <td>@t.DuracionMinutos</td>
                    <td>@t.Categoria</td>
                    <td>@(t.Activo ? "Sí" : "No")</td>
                    <td><a asp-action="Edit" asp-route-id="@t.Id">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>
    @if (!Model.Any()) { <div class="content-empty">No hay tratamientos. <a asp-action="Create">Crear el primero</a></div> }
</div>
