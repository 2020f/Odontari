@model List<Odontari.Web.ViewModels.BloqueoVistaClinicaItem>
@{
    ViewData["Title"] = "Bloqueo de vistas";
}

<div class="vistas-bloqueo-page">
    <h1 class="mb-3">Bloqueo de vistas</h1>
    <p class="text-muted mb-4">
        <strong>Switch activado (azul)</strong> = vista visible para Recepción, Doctor y Finanzas.
        <strong>Switch desactivado (gris)</strong> = vista bloqueada para esos roles. El Administrador de clínica siempre tiene acceso.
    </p>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <form asp-action="BloqueoVistas" method="post" class="vistas-bloqueo-form">
        @Html.AntiForgeryToken()
        <div class="vistas-bloqueo-grid">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="vista-toggle-card">
                    <div class="vista-toggle-header">
                        <span class="vista-toggle-title">@Model[i].Nombre</span>
                        <label class="switch">
                            @Html.HiddenFor(m => m[i].VistaKey)
                            @Html.HiddenFor(m => m[i].Nombre)
                            @Html.CheckBoxFor(m => m[i].Visible, new { @class = "switch-input" })
                            <span class="switch-slider"></span>
                        </label>
                    </div>
                    <p class="vista-toggle-help">
                        @(Model[i].Visible ? "Visible para Recepción, Doctor y Finanzas." : "Bloqueada para esos roles.")
                    </p>
                </div>
            }
        </div>

        <div class="vistas-bloqueo-actions">
            <button type="submit" class="btn btn-primary">Guardar cambios</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Volver a Personal</a>
        </div>
    </form>
</div>

<style>
.vistas-bloqueo-page { max-width: 920px; }
.vistas-bloqueo-form { margin-top: 1.5rem; }
.vistas-bloqueo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;
}
.vista-toggle-card {
    padding: 1.25rem 1.5rem;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
    background: #fff;
    box-shadow: 0 2px 6px rgba(15, 23, 42, 0.04);
}
.vista-toggle-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
}
.vista-toggle-title {
    font-weight: 600;
    color: #1f2933;
    font-size: 1rem;
}
.vista-toggle-help {
    margin: 0.5rem 0 0;
    font-size: 0.85rem;
    color: #6b7280;
}

/* Switch estilo checkbox/toggle */
.switch {
    position: relative;
    display: inline-block;
    width: 48px;
    height: 26px;
    flex-shrink: 0;
}
.switch-input {
    opacity: 0;
    width: 0;
    height: 0;
}
.switch-slider {
    position: absolute;
    cursor: pointer;
    inset: 0;
    background-color: #e5e7eb;
    border-radius: 999px;
    transition: background-color 0.2s;
}
.switch-slider::before {
    content: "";
    position: absolute;
    height: 20px;
    width: 20px;
    left: 3px;
    top: 3px;
    background-color: white;
    border-radius: 999px;
    box-shadow: 0 1px 3px rgba(15, 23, 42, 0.35);
    transition: transform 0.2s;
}
.switch-input:checked + .switch-slider {
    background-color: #4E8EA2;
}
.switch-input:checked + .switch-slider::before {
    transform: translateX(22px);
}
.vistas-bloqueo-actions { margin-top: 1.5rem; }
</style>
