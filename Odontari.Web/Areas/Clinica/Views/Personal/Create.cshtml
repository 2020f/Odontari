@model PersonalCreateViewModel
@{
    ViewData["Title"] = "Crear usuario";
    var roles = ViewBag.RolesPersonal as string[] ?? Array.Empty<string>();
}

<h1>Crear usuario (Doctores y Personal)</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-area="Clinica" asp-controller="Personal" asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label asp-for="NombreCompleto"></label>
        <input asp-for="NombreCompleto" class="form-control" />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Rol"></label>
        <select asp-for="Rol" class="form-select">
            <option value="">-- Seleccione rol --</option>
            @foreach (var r in roles)
            {
                <option value="@r">@r</option>
            }
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <div class="form-check">
            <input asp-for="Activo" class="form-check-input" />
            <label asp-for="Activo" class="form-check-label"></label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-area="Clinica" asp-controller="Personal" asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
