@{
    ViewData["Title"] = "Sin autorización";
    var vistaNombre = ViewBag.VistaNombre as string ?? "esta sección";
}
<div class="vista-no-permitida-card">
    <div class="vista-no-permitida-icon" aria-hidden="true">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
    </div>
    <h1 class="vista-no-permitida-title">No tiene autorización para acceder a esta vista</h1>
    <p class="vista-no-permitida-text">No tiene permiso para acceder a <strong>@vistaNombre</strong>. Si considera que debería tener acceso, contacte al administrador de la clínica (Configuración → Doctores y Personal).</p>
    <a asp-area="Clinica" asp-controller="Home" asp-action="Index" class="vista-no-permitida-btn">
        <span aria-hidden="true">←</span> Volver al inicio
    </a>
</div>
<style>
.vista-no-permitida-card {
    max-width: 480px;
    margin: 2rem auto;
    padding: 2.5rem 2rem;
    text-align: center;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 29, 57, 0.08);
    border: 1px solid rgba(0, 29, 57, 0.06);
}
.vista-no-permitida-icon {
    width: 72px;
    height: 72px;
    margin: 0 auto 1.25rem;
    border-radius: 50%;
    background: rgba(220, 53, 69, 0.1);
    color: #c92a2a;
    display: flex;
    align-items: center;
    justify-content: center;
}
.vista-no-permitida-icon svg { width: 38px; height: 38px; }
.vista-no-permitida-title { font-size: 1.35rem; font-weight: 600; color: #1a252f; margin-bottom: 0.75rem; }
.vista-no-permitida-text { color: #5a6c7d; font-size: 1rem; line-height: 1.5; margin-bottom: 1.5rem; }
.vista-no-permitida-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.65rem 1.35rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    background: #4E8EA2;
    color: #fff;
    border: none;
    transition: background 0.2s;
}
.vista-no-permitida-btn:hover { background: #3d7a8c; color: #fff; }
</style>
