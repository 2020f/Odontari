@using Microsoft.AspNetCore.Identity
@using Odontari.Web.Models
@using Odontari.Web.Data
@using Odontari.Web.Services
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IClinicaActualService ClinicaActual
@inject IBloqueoVistaClinicaService BloqueoVistas
@inject IUsuarioVistasPermisoService VistasPermiso
@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    var currentUser = User.Identity?.IsAuthenticated == true ? await UserManager.GetUserAsync(User) : null;
    var userRoles = currentUser != null ? await UserManager.GetRolesAsync(currentUser) : new List<string>();
    var userRole = userRoles.FirstOrDefault() ?? "Usuario";
    var displayName = currentUser?.NombreCompleto ?? currentUser?.Email ?? User.Identity?.Name ?? "Usuario";
    var initial = displayName.Length > 0 ? char.ToUpperInvariant(displayName[0]).ToString() : "?";
    var esAdminClinica = User.IsInRole(OdontariRoles.AdminClinica);
    var cid = await ClinicaActual.GetClinicaIdActualAsync();
    var vistasBloqueadasClinica = (cid != null && !esAdminClinica) ? await BloqueoVistas.GetVistasBloqueadasAsync(cid.Value) : new HashSet<string>(StringComparer.OrdinalIgnoreCase);
    var vistasPermitidasUsuario = currentUser != null ? await VistasPermiso.GetVistasPermitidasAsync(currentUser.Id) : null;
    bool PuedeVer(string key) => (esAdminClinica || !vistasBloqueadasClinica.Contains(key)) && (vistasPermitidasUsuario == null || vistasPermitidasUsuario.Contains(key));
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Odontari</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/clinica-layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/clinica-content.css" asp-append-version="true" />
    @if (controller == "Home" && action == "Index") { <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" /> }
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="clinica-layout">
    <aside class="clinica-sidebar">
        <div class="sidebar-brand">
            <svg class="sidebar-brand-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
            <span class="sidebar-brand-text">Odontari</span>
        </div>
        <nav class="clinica-sidebar-nav">
            @if (PuedeVer("Home"))
            {
                <a asp-area="Clinica" asp-controller="Home" asp-action="Index" class="nav-link @(controller == "Home" && action == "Index" ? "active" : "")" title="Dashboard">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="7" height="9"/><rect x="14" y="3" width="7" height="5"/><rect x="14" y="12" width="7" height="9"/><rect x="3" y="16" width="7" height="5"/></svg>
                    <span class="nav-text">Dashboard</span>
                </a>
            }
            @if (PuedeVer("Agenda"))
            {
                <a asp-area="Clinica" asp-controller="Agenda" asp-action="Index" class="nav-link @(controller == "Agenda" ? "active" : "")" title="Agenda">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="4" width="18" height="18" rx="2"/><path d="M16 2v4M8 2v4M3 10h18"/></svg>
                    <span class="nav-text">Agenda</span>
                </a>
            }
            @if (PuedeVer("Pacientes"))
            {
                <a asp-area="Clinica" asp-controller="Pacientes" asp-action="Index" class="nav-link @(controller == "Pacientes" ? "active" : "")" title="Pacientes">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                    <span class="nav-text">Pacientes</span>
                </a>
            }
            @if (PuedeVer("Expediente"))
            {
                <a asp-area="Clinica" asp-controller="Pacientes" asp-action="Index" class="nav-link @(controller == "Expediente" ? "active" : "")" title="Expediente Clínico">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/><path d="M12 11v6M9 14h6"/></svg>
                    <span class="nav-text">Expediente Clínico</span>
                </a>
            }
            @if (PuedeVer("Atencion"))
            {
                <a asp-area="Clinica" asp-controller="Atencion" asp-action="Index" class="nav-link @(controller == "Atencion" ? "active" : "")" title="Mis citas">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
                    <span class="nav-text">Mis citas</span>
                </a>
            }
            @if (PuedeVer("Tratamientos"))
            {
                <a asp-area="Clinica" asp-controller="Tratamientos" asp-action="Index" class="nav-link @(controller == "Tratamientos" ? "active" : "")" title="Tratamientos">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>
                    <span class="nav-text">Tratamientos</span>
                </a>
            }
            @if (PuedeVer("Caja"))
            {
                <a asp-area="Clinica" asp-controller="Caja" asp-action="Index" class="nav-link @(controller == "Caja" ? "active" : "")" title="Cobros / Caja">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="1" x2="12" y2="23"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>
                    <span class="nav-text">Cobros / Caja</span>
                </a>
            }
            @if (PuedeVer("Reportes"))
            {
                <a asp-area="Clinica" asp-controller="Reportes" asp-action="Index" class="nav-link @(controller == "Reportes" ? "active" : "")" title="Reportes">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg>
                    <span class="nav-text">Reportes</span>
                </a>
            }
            @if (User.IsInRole(OdontariRoles.AdminClinica) && PuedeVer("Personal"))
            {
                <a asp-area="Clinica" asp-controller="Personal" asp-action="Index" class="nav-link @(controller == "Personal" && action != "VistasClinica" ? "active" : "")" title="Doctores y Personal">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                    <span class="nav-text">Personal</span>
                </a>
                <a asp-area="Clinica" asp-controller="Personal" asp-action="BloqueoVistas" class="nav-link @(controller == "Personal" && action == "BloqueoVistas" ? "active" : "")" title="Bloqueo de vistas">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
                    <span class="nav-text">Bloqueo de vistas</span>
                </a>
            }
        </nav>
        <div class="clinica-sidebar-user">
            <div class="user-avatar" title="@displayName">@initial</div>
            <div class="user-info">
                <span class="user-name">@displayName</span>
                <span class="user-role">@userRole</span>
            </div>
            <div class="user-actions">
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "Clinica" })" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-logout" title="Cerrar sesión">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
                        <span class="btn-logout-text">Cerrar sesión</span>
                    </button>
                </form>
            </div>
        </div>
    </aside>
    <div class="clinica-main">
        <header class="clinica-main-header">
            <h1>@(ViewData["Title"] ?? "Odontari")</h1>
        </header>
        <main class="clinica-main-content">
            <div class="clinica-content">
                @RenderBody()
            </div>
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
