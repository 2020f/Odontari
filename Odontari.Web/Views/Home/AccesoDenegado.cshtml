@{
    ViewData["Title"] = "Acceso denegado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style>
        .acceso-denegado-page { min-height: 60vh; display: flex; align-items: center; justify-content: center; padding: 2rem; }
        .acceso-denegado-card {
            max-width: 440px;
            text-align: center;
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0, 29, 57, 0.1);
            border: 1px solid rgba(0, 29, 57, 0.08);
            padding: 2.5rem 2rem;
        }
        .acceso-denegado-icon {
            width: 72px;
            height: 72px;
            margin: 0 auto 1.25rem;
            border-radius: 50%;
            background: rgba(220, 53, 69, 0.1);
            color: #c92a2a;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .acceso-denegado-icon svg { width: 38px; height: 38px; }
        .acceso-denegado-card h1 { font-size: 1.5rem; font-weight: 600; color: #1a252f; margin-bottom: 0.75rem; }
        .acceso-denegado-card p { color: #5a6c7d; font-size: 0.95rem; line-height: 1.5; margin-bottom: 1.5rem; }
        .acceso-denegado-card .btn-volver {
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
            padding: 0.6rem 1.25rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.95rem;
            text-decoration: none;
            background: #4E8EA2;
            color: #fff;
            border: none;
            transition: background 0.2s;
        }
        .acceso-denegado-card .btn-volver:hover { background: #3d7a8c; color: #fff; }
    </style>
}

<div class="acceso-denegado-page">
    <div class="acceso-denegado-card">
        <div class="acceso-denegado-icon" aria-hidden="true">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
        </div>
        <h1>Acceso denegado</h1>
        <p>No tiene autorización para acceder a esta sección. Si considera que debería tener acceso, contacte al administrador del sistema.</p>
        <a asp-controller="Home" asp-action="Index" class="btn-volver">
            <span aria-hidden="true">←</span> Volver al inicio
        </a>
    </div>
</div>
