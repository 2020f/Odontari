<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Odontari.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Odontari.Web.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Odontari.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (ViewContext.RouteData.Values["area"] as string == "Saas")
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Saas" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Saas" asp-controller="Clinicas" asp-action="Index">Clínicas</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Saas" asp-controller="UsuariosClinica" asp-action="Index">Usuarios de Clínica</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Saas" asp-controller="Planes" asp-action="Index">Planes</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Saas" asp-controller="Suscripciones" asp-action="Index">Suscripciones</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Saas" asp-controller="UsuariosInternos" asp-action="Index">Usuarios Internos</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Saas" asp-controller="Logs" asp-action="Index">Logs / Auditoría</a></li>
                        }
                        else if (ViewContext.RouteData.Values["area"] as string == "Clinica")
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Clinica" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Clinica" asp-controller="Agenda" asp-action="Index">Agenda</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Clinica" asp-controller="Pacientes" asp-action="Index">Pacientes</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Clinica" asp-controller="Atencion" asp-action="Index">Mis citas</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Clinica" asp-controller="Tratamientos" asp-action="Index">Tratamientos</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Clinica" asp-controller="Caja" asp-action="Index">Caja</a></li>
                            @if (User.IsInRole("AdminClinica"))
                            {
                                <li class="nav-item"><a class="nav-link text-dark" asp-area="Clinica" asp-controller="Personal" asp-action="Index">Doctores y Personal</a></li>
                            }
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Odontari.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
